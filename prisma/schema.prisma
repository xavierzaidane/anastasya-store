generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  CUSTOMER
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id       Int       @id @default(autoincrement())
  slug     String    @unique
  name     String
  image    String?
  products Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  name        String
  description String?
  items       String[] 
  price       Decimal  @db.Decimal(10, 2)
  image       String?
  isActive    Boolean  @default(true)
  isStaffPick Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
}

model Blog {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  title     String
  excerpt   String?
  content   String
  category  String?
  readTime  Int      @default(5)
  author    String?
  image     String?
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
